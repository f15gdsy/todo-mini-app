.home {
  background-color: #F7F7F7;
  background-image: url("http://p1.bpimg.com/579936/42f00fa2647e8589.png");
  background-size: cover;
  color: #545454;
  position: relative;
}

.home__title {
  font-size: 36px;
  padding-top: 80px;
}

.home__wrapper {
  bottom: 100px;
  left: 50%;
  position: absolute;
  transform: translateX(-50%);
}

.home__hint {
  font-size: 16px;
}

.home__link {
  background-color: #545454;
  height: 75px;
  margin: 13px auto 27px;
  width: 1px;
}

.home__btn {
  margin: 0 auto;
}

.btn {
  position: relative;
  width: 40px;
}

.btn__el {
  border-radius: 100%;
}

.btn__el--0 {
  animation-name: scaleAnim0;
  animation-iteration-count: infinite;
  animation-duration: .65s;

  background-color: #F7F7F7;
  height: 12px;
  left: 14px;
  position: absolute;
  top: 14px;
  width: 12px;
  z-index: 2;
}

.btn__el--1 {
  animation-name: scaleAnim1;
  animation-iteration-count: infinite;
  animation-duration: 1s;

  background-color: #A1A0A0;
  height: 30px;
  left: 5px;
  position: absolute;
  top: 5px;
  width: 30px;
  z-index: 1;
}

.btn__el--2 {
  animation-name: scaleAnim2;
  animation-iteration-count: infinite;
  animation-duration: .75s;

  background-color: #CBCBCB;
  height: 40px;
  width: 40px;
}


@keyframes scaleAnim0 {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}

@keyframes scaleAnim1 {
  0% {
    transform: scale(1.2);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1.2);
  }
}

@keyframes scaleAnim2 {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.2);
  }

  100% {
    transform: scale(1);
  }
}